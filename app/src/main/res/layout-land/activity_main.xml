<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_hdpi"
    tools:context="com.luchianenco.happybirthday.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/happybirthday"
        android:id="@+id/splash"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:onClick="onImageClick" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">


        <TextView
            android:text="Happy Birthday, my Brother!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#F3E5F5"
            android:id="@+id/wishTitle"
            android:alpha="0"
            android:textSize="28sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Let your dreams come true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/wishText"
            android:textSize="24sp"
            android:textColor="#CE93D8"
            android:layout_below="@+id/wishTitle"
            android:layout_centerHorizontal="true"
            android:alpha="0" />
    </RelativeLayout>

</LinearLayout>
